<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NewProjectActivity" >

    <EditText
        android:id="@+id/rockTypeTxt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="61dp"
        android:ems="10"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="@string/rockTypeTxt"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <Spinner
        android:id="@+id/rockTypeSpn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rockTypeTxt"
        android:layout_toRightOf="@+id/rockTypeTxt"
        android:layout_alignParentRight="true" />

    <EditText
        android:id="@+id/strcTypeTxt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rockTypeSpn"
        android:layout_marginTop="70dp"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="@string/strcTypeTxt"
        android:textAppearance="?android:attr/textAppearanceLarge" >
    </EditText>
	<Spinner
        android:id="@+id/strcTypeSpn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/strcTypeTxt"
        android:layout_toRightOf="@+id/strcTypeTxt"
        android:layout_alignParentRight="true" />

	<ImageButton
	    android:id="@+id/nextBtn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignRight="@+id/strcTypeSpn"
	    android:src="@drawable/ic_next" />
    
</RelativeLayout>
